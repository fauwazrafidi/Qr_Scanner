<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ADD8E6">

    <TextView
        android:id="@+id/dataOperationIdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Order:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/dataTextView_Operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataOperationIdView"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/dataOperationOperationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataTextView_Operation"
        android:text="Operation:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/dataTextView_OperationOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataOperationOperationView"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/dataorderArticleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataTextView_OperationOperation"
        android:text="Part Number:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/dataTextView_orderArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataorderArticleView"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/dataorderUserfield65View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataTextView_orderArticle"
        android:text="Carton QTY:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <EditText
        android:id="@+id/dataEditText_orderUserfield65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataorderUserfield65View"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/dataCustomerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataEditText_orderUserfield65"
        android:text="Customer:"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />
    <Spinner
        android:id="@+id/spinnerCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataCustomerView"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonFinishedGoods"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CheckIn" />
    </LinearLayout>

</RelativeLayout>